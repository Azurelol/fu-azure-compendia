<div>

    <!-- Title banner -->
    <header class="sk-titlebar">
        <div class="sk-title-icon">◆</div>
        <h1 class="sk-title">{{name}}</h1>
        <div class="sk-title-meta"></div>
    </header>

    <!-- Flavor triptych -->
    <section class="sk-flavor">
        <div class="sk-chip">{{system.hook1}}</div>
        <div class="sk-chip">{{system.hook2}}</div>
        <div class="sk-chip">{{system.hook3}}</div>
    </section>

    <!-- Intro callout -->
    <section class="sk-intro">
        <p>
            {{{enrichedIntroduction}}}
        </p>
    </section>

    <!-- PRESSURE POOLS (3 cards with dice + connectors) -->
    <section class="sk-events">
        {{> "modules/fu-azure-compendia/templates/partials/pressure-pool-view.hbs" data=system.prelude}}
        <div class="sk-connector" aria-hidden="true"></div>
        {{> "modules/fu-azure-compendia/templates/partials/pressure-pool-view.hbs" data=system.escalation}}
        <div class="sk-connector" aria-hidden="true"></div>
        {{> "modules/fu-azure-compendia/templates/partials/pressure-pool-view.hbs" data=system.climax}}
    </section>

    <!-- THREADS -->
    <section class="sk-panel">
        <div class="sk-panel-head">THREADS</div>
        <div class="sk-panel-grid">
            {{> "modules/fu-azure-compendia/templates/partials/thread-view.hbs" data=system.thread1}}
            {{> "modules/fu-azure-compendia/templates/partials/thread-view.hbs" data=system.thread2}}
            {{> "modules/fu-azure-compendia/templates/partials/thread-view.hbs" data=system.thread3}}
        </div>
    </section>

    <!-- SETUP -->
    <section class="sk-panel">
        <div class="sk-panel-head">SETUP</div>
        <div class="sk-panel-grid">
            {{> "modules/fu-azure-compendia/templates/partials/setup-view.hbs" data=system.setup1}}
            {{> "modules/fu-azure-compendia/templates/partials/setup-view.hbs" data=system.setup2}}
            {{> "modules/fu-azure-compendia/templates/partials/setup-view.hbs" data=system.setup3}}
        </div>
    </section>

    <!-- Small action cards -->
    <section class="sk-actions">
        <article class="sk-action">
            <header><span class="sk-die">4d</span><span class="sk-action-title">Ask One Question</span></header>
            <ul class="sk-star">
                <li>Tightly sealed lips</li>
                <li>Strength in numbers</li>
            </ul>
            <hr>
            <div class="sk-action-body">
                <div class="sk-col">
                    <ul class="sk-dot bold">
                        <li>Make Excuses</li>
                        <li>Change Subjects</li>
                        <li>Ignore Reason</li>
                    </ul>
                </div>
                <div class="sk-fail">X 4d Anger Villagers</div>
            </div>
        </article>

        <article class="sk-action">
            <header><span class="sk-die">4d</span><span class="sk-action-title">Falsely Accused</span></header>
            <ul class="sk-star">
                <li>Since you came, chaos</li>
                <li>Town hates outsiders</li>
            </ul>
            <hr>
            <div class="sk-action-body">
                <div class="sk-col">
                    <ul class="sk-dot bold">
                        <li>Need a Scapegoat</li>
                        <li>Misjudged Evidence</li>
                        <li>False Witnesses</li>
                    </ul>
                </div>
                <div class="sk-fail">X 4d Found Guilty</div>
            </div>
        </article>

        <article class="sk-action">
            <header><span class="sk-die">8d</span><span class="sk-action-title">Chase ’Em Down</span></header>
            <ul class="sk-star">
                <li>Know the town well</li>
                <li>Fit into small spaces</li>
            </ul>
            <hr>
            <div class="sk-action-body">
                <div class="sk-col">
                    <ul class="sk-dot bold">
                        <li>Mad Scramble</li>
                        <li>Goblinpile</li>
                        <li>Juke</li>
                    </ul>
                </div>
                <div class="sk-fail">X Lose the Trail</div>
            </div>
        </article>

        <article class="sk-action">
            <header><span class="sk-die">6d</span><span class="sk-action-title">Goblin Ambush</span></header>
            <ul class="sk-star">
                <li>Super sneaky</li>
                <li>Night-vision</li>
            </ul>
            <hr>
            <div class="sk-action-body">
                <div class="sk-col">
                    <ul class="sk-dot bold">
                        <li>Jump from Above</li>
                        <li>Bite Neck</li>
                        <li>Yelp for Help</li>
                    </ul>
                </div>
                <div class="sk-fail">X Kill a Goblin</div>
            </div>
        </article>
    </section>

    <!-- Mix it up bar -->
    <section class="sk-mix">
        <div class="sk-mix-label">TWIST</div>
        <div class="sk-mix-text">{{system.twist}}</div>
    </section>

    <!-- Footer -->
    <footer class="sk-footer">
        <div class="sk-page"></div>
        <div class="sk-chapter">{{system.author}}</div>
    </footer>
</div>
