<form>
    <div class="form-group">
        <label>
            <input type="text" name="system.introduction" maxlength="300" value="{{ system.introduction }}"  data-dtype="String" />
        </label>
    </div>

    <div class="form-group">
        <label>Scenes</label>
        <ul>
            {{#each system.scenes}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="form-group">
        <label>GM Notes</label>
        {{editor system.gmNotes target="system.gmNotes" button=true owner=owner editable=editable}}
    </div>

</form>
